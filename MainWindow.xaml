                        <TextBlock Grid.Column="1" TextAlignment="Center" Text="VALUE" />
                    </Grid>
                    <ListView x:Name="tableVRAM" Grid.Row="1" VirtualizingPanel.IsVirtualizing="False" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="174" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
